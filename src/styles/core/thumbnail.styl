.uk-thumbnail
  padding 8px
  > img
    margin-bottom 15px
  .uk-thumbnail-caption
    .goods-name
      height 20px
      display block
      margin-bottom 15px
      text-transform uppercase
      font-weight 600
      font-size 16px

    .goods-cost-content
      margin-bottom 10px
      .goods-cost
        width 60px
        height 30px
        line-height 30px
        font-size 20px
        font-weight 200

        &.sale
          text-decoration line-through
          color red